#include <stdio.h>

int main() {
    const float PI = 3.14159;

    int age = 20;              
    char grade = 'A';          
    float height = 5.9;        
    double weight = 70.55;     
    char name[] = "Alice";

    printf("---- Displaying Variable Values ----\n");
    printf("Name: %s\n", name);          
    printf("Age: %d\n", age);            
    printf("Grade: %c\n", grade);        
    printf("Height: %.2f feet\n", height); 
    printf("Weight: %.2lf kg\n", weight);
    printf("Constant PI: %.5f\n", PI);

    return 0;
}
