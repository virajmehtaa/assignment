#include <stdio.h>

int main() {
    int a, b;

    printf("Enter first integer: ");
    scanf("%d", &a);

    printf("Enter second integer: ");
    scanf("%d", &b);

    printf("\n--- Arithmetic Operations ---\n");
    printf("%d + %d = %d\n", a, b, a + b);
    printf("%d - %d = %d\n", a, b, a - b);
    printf("%d * %d = %d\n", a, b, a * b);
    printf("%d / %d = %d\n", a, b, a / b);   
    printf("%d %% %d = %d\n", a, b, a % b);

    printf("\n--- Relational Operations ---\n");
    printf("%d == %d : %d\n", a, b, a == b);
    printf("%d != %d : %d\n", a, b, a != b);
    printf("%d >  %d : %d\n", a, b, a > b);
    printf("%d <  %d : %d\n", a, b, a < b);
    printf("%d >= %d : %d\n", a, b, a >= b);
    printf("%d <= %d : %d\n", a, b, a <= b);

    printf("\n--- Logical Operations ---\n");
    printf("(%d && %d) : %d\n", a, b, (a && b));
    printf("(%d || %d) : %d\n", a, b, (a || b));  
    printf("!(%d)     : %d\n", a, !a);           
    printf("!(%d)     : %d\n", b, !b);            

    return 0;
}
