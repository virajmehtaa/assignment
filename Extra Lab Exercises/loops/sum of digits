#include <stdio.h>

int main() 
{
    int num, sum = 0, reverse = 0, remainder;

    printf("Enter an integer: ");
    scanf("%d", &num);

    int original = num;

    while (num != 0) {
        remainder = num % 10;        
        sum = sum + remainder;       
        reverse = reverse * 10 + remainder;  
        num = num / 10;             
    }

    printf("\nSum of digits of %d = %d\n", original, sum);
    printf("Reverse of %d = %d\n", original, reverse);

    return 0;

}

