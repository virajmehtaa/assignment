#include<stdio.h>

int main()
{
   int n, i;
   float sum, average;

   printf("Enter Array Size: "); 
   scanf("%d", &n);
   
   int arr[n];

   printf("Enter %d elements: \n", n);
   for(i=0; i<n; i++)
   {
       scanf("%d", &arr[i]);
       sum += arr[i]; 
   }

   average = sum/n;

   printf("Sum of array elements: %.2f \n", sum);
   printf("Average of array elements: %.2f \n", average);
   
   return 0;
 }
